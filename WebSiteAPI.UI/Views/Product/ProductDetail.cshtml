@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    var categoryNames = ((IEnumerable<dynamic>)Model.Product.ProductCategories)
                        .Select(pc => (string)pc.Category.Name)
                        .ToList();
    var concatenatedNames = string.Join(", ", categoryNames);
}


@{
    decimal Price = Model.Product.Price * 10 / 100 + Model.Product.Price;
}
