@using WebSiteAPI.Application.Features.Queries.Category.GetByIdCategory;
@using WebSiteAPI.Domain.Entities;

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model GetByIdCategoryQueryResponse
@if (Model!=null)
{
    var category = (Category)Model.Categories;

    <div class="col-12">
        <div class="row">
            <div class="col-sm-8 m-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="card-header-2">
                            <h5>Kategori Güncelle</h5>
                        </div>

                        <form class="theme-form theme-form-2 mega-form" method="post" asp-action="Update" asp-controller="Category">
                            <div class="mb-4 row align-items-center">
                                <label class="form-label-title col-sm-3 mb-0">Kategori Adi</label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="text"
                                       placeholder="Kategori Adı" id="Name" name="Name" value="@category.Name">
                                </div>
                            </div>
                            <div class="mb-4 row align-items-center">
                                <label class="form-label-title col-sm-3 mb-0">Kategori Açıklaması</label>
                                <div class="col-sm-9">
                                    <input class="form-control" type="text"
                                       placeholder="Kategori Açıklaması" id="Description" name="Description" value="@category.Description">
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-lg-2 col-md-3"></div>
                                <div class="col-md-9 col-lg-10">
                                    <button class="btn btn-primary" type="submit">Kaydet</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


